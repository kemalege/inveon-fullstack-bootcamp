@model SmartShelf.Models.ViewModels.UpdateUserViewModel

@{
    ViewData["Title"] = "Kullanıcı Bilgilerini Güncelle";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.UserName</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Edit">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label for="userName" class="form-label">Kullanıcı Adı</label>
                <input id="userName" asp-for="UserName" class="form-control" />
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" asp-for="Email" type="email" class="form-control" />
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="city" class="form-label">Şehir</label>
                <input id="city" asp-for="City" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="gender" class="form-label">Cinsiyet</label>
                <select id="gender" asp-for="Gender" class="form-select">
                    <option value="">Seçiniz</option>
                    <option value="Male">Erkek</option>
                    <option value="Female">Kadın</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="@Url.Action("List", "User")" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
